# triggers SQLITE para PRODUTO

CREATE TRIGGER TRG_PRODUTO_INS
AFTER INSERT
ON INVENTORY_STOCK
FOR EACH ROW 
BEGIN 
    insert into tabelas_log (data, evento) values (datetime('now'), 'INSERIDO REGISTRO DE No. ' || NEW.ID || ' (' || NEW.NAME || ') NA TABELA DE PRODUTO/ITEM');
END;

CREATE TRIGGER TRG_PRODUTO_UPD
AFTER UPDATE
ON INVENTORY_STOCK
FOR EACH ROW 
BEGIN 
    insert into tabelas_log (data, evento) values (datetime('now'), 'ALTERADO O REGISTRO DE No. ' || NEW.ID || ' (' || NEW.NAME || ') NA TABELA DE PRODUTO/ITEM');
END;


