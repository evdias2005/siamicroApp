<script>
    var $j = jQuery.noConflict();  // Usa uma variável diferente para o jQuery
    $j("#id_cidade").change(function () {
        var url = $("#edit_PFForm").attr("data-bairros-url");
        var cidadeId = $(this).val();
        $j.ajax({
            url: url,
            data: {
                'cidade': cidadeId
            },
            success: function (data) {
                $("#id_bairro").html(data);
            }
        });
    });
</script>

<script>
    var $j = jQuery.noConflict();  // Usa uma variável diferente para o jQuery

    function find_cep() {
        var numcep = document.getElementById("id_cep").value;
        numcep = numcep.replace("-", "");  // Remove o hífen do CEP

        $j.ajax({
            url: "/processos/consultar-cep/",
            data: {
                'cep': numcep
            },
            success: function(data){
                if (!data.error) {
                    alert ("\nDados para o CEP: " + data.cep + "\n\nLogradouro: "
                    + data.logradouro.toUpperCase() + "\n\Complemento: " +  data.complemento.toUpperCase()
                    + "\nBairro: " + data.bairro.toUpperCase() +  "\nCidade/UF: " + data.localidade.toUpperCase() + "/" + data.uf);
                } else {
                    alert("CEP não encontrado!");
                }
            },
            error: function(){
                alert("Erro ao consultar o CEP. Tente novamente.");
            }
        });
    }
</script>

